<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragSearch">
    <androidx.constraintlayout.widget.ConstraintLayout android:layout_height="match_parent" android:layout_width="match_parent">

        <Button
            android:id="@+id/resultsbtn"
            android:layout_width="190dp"
            android:layout_height="63dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:text="@string/resultsbtntxt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inputMovieName" />

        <EditText
            android:id="@+id/inputMovieName"
            android:layout_width="388dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:ems="10"
            android:hint="@string/searchtxt"
            android:inputType="textPersonName"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/searchinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="464dp"
            android:text="@string/search_info_list"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constrainedWidth="true"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/movie_poster"
            android:layout_width="296dp"
            android:layout_height="343dp"
            android:layout_marginStart="56dp"
            android:src="@drawable/movieimg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/searchinfo"
            app:layout_constraintVertical_bias="0.847"
            tools:srcCompat="@drawable/movieimg" />

        <Button
            android:id="@+id/btnAddtoWatchlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="212dp"
            android:text="Add to watchlist"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inputMovieName" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>